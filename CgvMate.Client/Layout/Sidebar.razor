                    </li>
                </ul>
            </div>
        </li>
    </ul>
    <div class="contact-wrap">
        <p class="contact">버그 제보/문의</p>
        <p class="contact">kakao: <a href="https://open.kakao.com/o/sSS6JJsg">오픈채팅</a></p>
    </div>
</div>

@code {
    [Parameter]
    public bool IsOpen { get; set; } = false;

    [Parameter]
    public string Class { get; set; } = "sidebar";

}